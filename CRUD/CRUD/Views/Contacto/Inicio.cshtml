@model List<CRUD.Models.Contacto>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
            
        <div class="alert alert-warning" role="alert">
            <div class="panel-heading">
                <h4>
                    lista de contacto
                </h4>
            </div>
        </div>
        <div class="panel-body">
            <a class="btn btn-success" href="@Url.Action("Registrar","Contacto")"> Crear Nuevo</a>
            <hr />
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Telefono</th>
                            <th style="width:150px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CRUD.Models.Contacto item in Model) //Model llama a la lista de contactos(@model List<CRUD.Models.Contacto>)
                        {
                            <tr>
                                <td>@item.Nombres</td>
                                <td>@item.Apellidos</td>
                                <td>@item.Correo</td>
                                <td>@item.Telefono</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Editar","Contacto", new {idcontacto = item.IdContacto})" > Editar</a>
                                    <a class="btn btn-danger btn-sm"> Eliminar </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>