@model CRUD.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="alert alert-warning" role="alert">
            <div class="panel-heading">
                <h4>Editar Contacto</h4>
            </div>
        </div>
        <div class="panel-body">
            <form action="@Url.Action("Editar", "Contacto")" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.HiddenFor(m => m.IdContacto)
                    @Html.TextBoxFor(m => m.IdContacto, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Nombres)
                    @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Apellidos)
                    @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Telefono)
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Correo)
                    @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio", "Contacto")">Volver</a>
            </form>
        </div>
    </div>
</div>
